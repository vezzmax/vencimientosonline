<% provide(:title, @user.name) %>
<% if user_signed_in? %>

<div class="row-fluid">
	<div class="span12"/>
</div>
<div class="row">
	<div class="well span6">
    <% if @user.directExpirations.any? %>
      <h3>Próximos Vencimientos (<%= @user.directExpirations.count %>)</h3><br>
      <%  @companyExpirations = @user.directExpirations.sort { |a,b| a.date <=> b.date }
        %>
        <table class="table table-striped">
		  <tr>
		    <th>Impuesto</th>
		    <th>Empresa</th>
		    <th>Fecha de Vencimiento</th>
		  </tr>

		<% @companyExpirations[0..4].each do |ce| %>
		  <tr>
		    <td><%= ce.associated_tax.tax.name %></td>
		    <td><%= ce.associated_tax.company.name %></td>
		    <td><%= ce.date.to_s(:long) %></td>
		  </tr>
		<% end %>
		</table>

		<div class="pagination">
			<ul>
				<li><a href="#">Prev</a></li>
				<li><a href="#">1</a></li>
				<li><a href="#">2</a></li>
				<li><a href="#">3</a></li>
				<li><a href="#">Next</a></li>
			</ul>
		</div>
    <% end %>
	</div>
	<div class="well span6">
		<h3>Impuestos supervisados</h3> <br>
		<%  @supervisions = @user.supervisions
        %>
        <table class="table table-hover">
		  <tr>
		    <th>Empresa</th>
		    <th>Impuesto</th>
		    <th>Nivel</th>
		  </tr>

			<% @supervisions[0..4].each do |sup| %>
			  <tr>
			    <td><%= sup.associated_tax.company.name %></td>
			    <td><%= sup.associated_tax.tax.name %></td>
			    <% if sup.level > 1 then 
			    	@badge_type = "badge-success"
			       else @badge_type = "badge-important" 
			       	end %>	
			    <td><span class="badge <%= @badge_type %>"> <%= sup.level %></span></td>
			  </tr>
			<% end %>
		</table>
		<div class="pagination">
			<ul>
				<li><a href="#">Prev</a></li>
				<li><a href="#">1</a></li>
				<li><a href="#">2</a></li>
				<li><a href="#">3</a></li>
				<li><a href="#">Next</a></li>
			</ul>
		</div>
	</div>
<div class="row-fluid">
	<div class="well span6">
		<h3>Últimas presentaciones</h3>
		<table class="table table-hover">
		  <tr>
		    <th>Impuesto</th>
		    <th>Empresa</th>
		    <th>Fecha</th>
		  </tr>

			<% @presentations = [
				{:impuesto => "Cualquiera",:empresa => "Cualquiera",:fecha => "27/01/2012"},
				{:impuesto => "Cualquiera",:empresa => "Cualquiera",:fecha => "27/01/2012"},
				{:impuesto => "Cualquiera",:empresa => "Cualquiera",:fecha => "27/01/2012"}
			]
			   @presentations.each do |sup| %>
			  <tr>
			    <td><%= sup[:impuesto] %></td>
			    <td><%= sup[:empresa] %></td>
			    <td><%= sup[:fecha] %> </td>
			  </tr>
			<% end %>
		</table>
	</div>
	<div class="well span6">
		<h3>Vencimientos de otro nivel</h3>
		<table class="table table-hover">
		  <tr>
		    <th>Impuesto</th>
		    <th>Empresa</th>
		    <th>Responsables</th>
		  </tr>

			<% @vencimientos = [
				{:impuesto => "Cualquiera",:empresa => "Cualquiera",:boton => "danger"},
				{:impuesto => "Cualquiera",:empresa => "Cualquiera",:boton => "success"},
				{:impuesto => "Cualquiera",:empresa => "Cualquiera",:boton => "warning"}
			]
			   @vencimientos.each do |sup| %>
			  <tr>
			    <td><%= sup[:impuesto] %></td>
			    <td><%= sup[:empresa] %></td>
			    <td>
			    	<div class="btn-group">
			    		<a class="btn btn-<%= sup[:boton]%> dropdown-toggle" data-toggle="dropdown" href="#">
			    			Marcelo Salas - 1
			    			<!-- <span class="caret"></span> -->
			    		</a>
			    		<ul class="dropdown-menu">
			    			<li>Enzo Francescoli - 2</li>
			    			<li>Maximo Vezzosi - 3</li>
			    			<li>Lucio Caporale - 4</li>
			    		</ul>
			    	</div>
			    </td>
			  </tr>
			<% end %>
		</table>
	</div>
</div>
<% end %>
