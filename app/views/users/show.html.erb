<% provide(:title, @user.name) %>
<% if user_signed_in? %>

<div class="row-fluid">
	<div class="span12"/>
</div>
<div class="row">
	<div class="span6">
    <% if @user.directExpirations.any? %>
      <h3>Próximos Vencimientos (<%= @user.directExpirations.count %>)</h3><br>
      <%  @companyExpirations = @user.directExpirations.sort { |a,b| a.date <=> b.date }
        %>
        <table class="table table-striped">
		  <tr>
		    <th>Impuesto</th>
		    <th>Empresa</th>
		    <th>Fecha de Vencimiento</th>
		  </tr>

		<% @companyExpirations.each do |ce| %>
		  <tr>
		    <td><%= ce.associated_tax.tax.name %></td>
		    <td><%= ce.associated_tax.company.name %></td>
		    <td><%= ce.date.to_s(:long) %></td>
		  </tr>
		<% end %>
		</table>
    <% end %>
	</div>
	<div class="span6">
		<h3>Impuestos supervisados</h3> <br>
		<%  @supervisions = @user.supervisions
        %>
        <table class="table table-striped">
		  <tr>
		    <th>Empresa</th>
		    <th>Impuesto</th>
		    <th>Nivel</th>
		  </tr>

			<% @supervisions.each do |sup| %>
			  <tr>
			    <td><%= sup.associated_tax.company.name %></td>
			    <td><%= sup.associated_tax.tax.name %></td>
			    <% if sup.level > 1 then 
			    	@badge_type = "badge-success"
			       else @badge_type = "badge-important" 
			       	end %>	
			    <td><span class="badge <%= @badge_type %>"> <%= sup.level %></span></td>
			  </tr>
			<% end %>
		</table>
	</div>
<div class="row-fluid">
	<div class="span6"><h3>Últimas presentaciones</h3></div>
	<div class="span6"><h3>Vencimientos de otro nivel</h3></div>
</div>
<% end %>