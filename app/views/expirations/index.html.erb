<% @expirations.each do |expiration| %>
  <tr>
    <td><%= expiration.date %></td>
    <td><%= expiration.ending_first %></td>
    <td><%= expiration.ending_last %></td>
    <td><%= expiration.tax_id %></td>
    <td><%= link_to 'Show', expiration %></td>
    <td><%= link_to 'Edit', edit_expiration_path(expiration) %></td>
    <td><%= link_to 'Destroy', expiration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

